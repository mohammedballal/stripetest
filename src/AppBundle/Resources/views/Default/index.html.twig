<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

{% block body %}
<table class="table">
    {% for card in cu.sources.data %}
        <tr>
            <td>{{ loop.index }}</td>
            <td>{{ card.brand }}</td>
            <td>**** **** **** {{ card.last4 }}</td>
            <td>{{ card.exp_month }} / {{ card.exp_month }}</td>
            <td>{{ card.funding|capitalize }}</td>
            <td><a href="{{ path('stripe_charge', {'card' : card.id}) }}" class="btn btn-success">Pay</a></td>
        </tr>
    {% endfor %}
</table>
{% endblock body %}